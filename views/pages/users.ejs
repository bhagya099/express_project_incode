<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap cdn link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>All Users details</title>
</head>

<body>
    <!-- it is a header -->
    <%- include('../partials/header') %>
        <main class="position-relative container-fluid">
            <h1 class="text-center mt-2">All Users Detalis</h1>
            <div class="m-5">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope=" col ">First Name</th>
                            <th scope="col ">Last Name</th>
                            <th scope="col ">Email Address</th>
                            <th scope="col ">Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= `${user.firstname}`%>
                                </td>
                                <td>
                                    <%= `${user.lastname}` %>
                                </td>
                                <td>
                                    <%= `${user.email}` %>
                                </td>
                                <td>
                                    <%= `${user.password}` %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <a href="/users/new" class="btn btn-secondary position-absolute top-100 start-50 mt-5" role="button">
                        Create new Users
                    </a>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>